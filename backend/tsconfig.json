{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "outDir": "dist",
    "rootDir": ".",

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "routes/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}

  
